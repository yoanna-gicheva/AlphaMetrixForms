@model AlphaMetrixForms.Web.Models.Form.FormViewModel

@{
    ViewData["Title"] = "DisplayFormView";
}
    <div class="card">
        <div class="card-header">
            Form
        </div>
        <div class="card-body">
            <div class="col-md-6">
                <form asp-controller="Response" asp-action="SubmitResponse" id="response">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label">@Model.Title</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">@Model.Description</label>
                    </div>
                    <div id="detailsContainer">
                        @Html.EditorFor(model => model.Questions)
                    </div>
                    <div name="submit" class="visible">
                        <a asp-controller="Response" asp-action="SubmitResponse" method="POST"><button class="btn btn-primary">Submit answers</button></a>
                    </div>
                </form>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}    
}


