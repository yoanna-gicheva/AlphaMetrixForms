@model AlphaMetrixForms.Web.Models.Question.QuestionViewModel

<br>
<div class="card">
    <div class="card-header">
        Option Question
        <button id="@Model.OrderNumber" name="deleteOptionQuestion" type="button" class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="card-body">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" placeholder="Type option question here..." />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div id="optionsDiv">
                @for (int i = 0; i < Model.Options.Count; i++)
                {
                    <button id="@Model.OrderNumber" value="@i" name="deleteOption" type="button" class="close" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        @{
                            int b = i + 1;
                        }
                        <label asp-for="@Model.Options[i].Text" class="control-label">Option @b:</label>
                        <input asp-for="@Model.Options[i].Text" class="form-control" placeholder="Option @b" />
                        <span asp-validation-for="@Model.Options[i].Text" class="text-danger"></span>
                    </div>
                }
            </div>
            <hr>
            <div id="container">
                <div id="block1">
                    <button name="addOption" type="button" id="@Model.OrderNumber" class="btn btn-primary float-left">+</button>
                </div>
                <div id="block2">
                    <div class="custom-control custom-switch float-right" style="display: flex; justify-content: space-around">
                        <input asp-for="IsRequired" type="checkbox" class="custom-control-input" id="@Model.OrderNumber + option1">
                        <label class="custom-control-label" for="@Model.OrderNumber + option1">Required</label>
                    </div>
                    <div class="custom-control custom-switch float-right">
                        <input asp-for="IsMultipleAnswerAllowed" type="checkbox" class="custom-control-input" id="@Model.OrderNumber + option2">
                        <label class="custom-control-label" for="@Model.OrderNumber + option2">Multiple answers</label>
                    </div>
                </div>
            </div>
            @Html.Hidden("OrderNumber", Model.OrderNumber)
            @Html.Hidden("Type", Model.Type)
            @Html.Hidden("ToRemove", Model.ToRemove)
            @Html.Hidden("Id", Model.Id)
            @Html.Hidden("EditMode", Model.EditMode)
        </div>
    </div>
</div>
<br>
<script src="~/js/option-question.js"></script>



