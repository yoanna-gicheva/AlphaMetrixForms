@model AlphaMetrixForms.Web.Models.Question.QuestionViewModel

<br></br>
<div class="card" id="textCard">
    <div class="card-header">
        Text Question
    </div>
    <div class="card-body">
        <div class="col-md-12">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                <div class="form-group">
                    <label for="Title">@Model.Text</label>
                    <input type="hidden" asp-for="@Model.Text" />
                </div>
                <input type="hidden" asp-for="@Model.Id">
            </div>
            @if (@Model.IsLongAnswer)
            {
                <textarea class="form-control" label id="Answer" rows="4" cols="50" asp-for="@Model.Answer"></textarea>
            }
            else
            {
                <input class="form-control" type="text" id="Answer" asp-for="@Model.Answer"><br><br>
            }
        </div>
    </div>
</div>
<br></br>


