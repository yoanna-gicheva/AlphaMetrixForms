@model AlphaMetrixForms.Web.Utils.PaginatedList<AlphaMetrixForms.Web.Models.Form.FormViewModel>

@{
    ViewData["Title"] = "MyForms";
}

<div class="container">
    <div class="row">
        @foreach (var form in Model.ToList())
        {
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                        <a class="card-link" asp-controller="Form" asp-action="Edit" asp-route-id="@form.Id">
                            <h5 class="card-title">@form.Title</h5>
                        </a>
                        <h6 class="card-subtitle mb-2 text-muted">@form.Description</h6>
                        <p class="card-text">Created on: @form.CreatedOn</p>
                        <p class="card-text">Modified on: @form.ModifiedOn</p>
                        <p class="card-text">Answers: @form.Responses.Count</p>
                        <a asp-controller="Response" asp-action="ViewAnswers" asp-route-formId="@form.Id"><button class="btn btn-primary">View answers</button></a>
                        @*<button type="button" asp-controller="Response" asp-action="ViewAnswers" asp-route-formId="@form.Id" class="btn btn-primary">View answers</button>*@
                        <button type="button" id="@form.Id" name="main-email-send" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                            Share
                        </button>
                        <input type="button" name="deleteForm" class="btn btn-danger" id="@form.Id" value="Delete">
                    </div>
                </div>
            </div>
        }
    </div>
    <br>
</div>
<a asp-controller="Form" asp-action="Create" class="btn btn-primary">Create New</a>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<br>
<br>
<partial name="_MultipleEmailPartialView" />

<div align="center">
    <a asp-action="MyForms"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       class="btn btn-default @prevDisabled">
        Previous
    </a>
    <a asp-action="MyForms"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       class="btn btn-default @nextDisabled">
        Next
    </a>
</div>
<br>
<br>
<br>
<br>


<script>
    $("button[name='main-email-send']").on('click', function () {
        $(this).attr("name", "unique");
    });
    $("input[name='deleteForm']").on('click', function () {
        swal({
            title: "Are you sure?",
            text: "Once deleted, you will not be able to recover this form!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {

                if (willDelete) {
                    $.ajax({
                        async: true,
                        data: { "id": this.id },
                        type: "POST",
                        url: '/Form/Delete',
                        success: function () {
                            swal("Poof! Your form has been deleted!", {
                                icon: "success",
                            })
                                .then(() => {
                                    window.location.replace("https://localhost:44366/User/MyForms")
                                });
                        }
                    });

                } else {
                    swal("Your form is safe!");
                }
            });
    });


</script>


