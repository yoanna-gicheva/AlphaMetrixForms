@*@model IEnumerable<AlphaMetrixForms.Web.Models.Form.FormViewModel>*@
@model AlphaMetrixForms.Web.Utils.PaginatedList<AlphaMetrixForms.Web.Models.Form.FormViewModel>

<div class="container">
    <div class="row">
        @foreach (var form in Model.ToList())
        {
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@form.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@form.Description</h6>
                        <p class="card-text">Created on: @form.CreatedOn</p>
                        <p class="card-text">Modified on: @form.ModifiedOn</p>
                        <p class="card-text">Answers: @form.Responses.Count</p>
                        <a type="button" class="btn btn-primary" class="card-link" asp-controller="Form" asp-action="Edit" asp-route-id="@form.Id">Edit</a>
                        <input type="button" name="preview" class="btn btn-primary" value="View answers">
                        <input type="button" name="deleteForm" class="btn btn-danger" id="@form.Id" value="Delete">
                    </div>
                </div>
            </div>
        }
    </div>
    <br>
</div>
<br>
<a asp-controller="Form" asp-action="Create" class="btn btn-primary">Create New</a>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div>
    <a asp-action="MyForms"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       class="btn btn-default @prevDisabled">
        Previous
    </a>
    <a asp-action="MyForms"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       class="btn btn-default @nextDisabled">
        Next
    </a>
</div>
<br>
<br>
<br>
<br>



<script>
    $("input[name='deleteForm']").on('click', function () {
        swal({
            title: "Are you sure?",
            text: "Once deleted, you will not be able to recover this form!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {

                if (willDelete) {
                    $.ajax({
                        async: true,
                        data: { "id": this.id },
                        type: "POST",
                        url: '/Form/Delete',
                        success: function () {
                            swal("Poof! Your form has been deleted!", {
                                icon: "success",
                            })
                                .then(() => {
                                    window.location.replace("https://localhost:44366/User/MyForms")
                                });
                        }
                    });

                } else {
                    swal("Your form is safe!");
                }
            });
    });
</script>